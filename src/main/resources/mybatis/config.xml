<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE configuration PUBLIC "-//mybatis.org//DTD Config 3.0//EN" "http://mybatis.org/dtd/mybatis-3-config.dtd" >
<configuration>

	<typeAliases>
		<typeAlias type="com.spring.springBM.book.model.vo.Book" alias="Book"/>
		<typeAlias type="com.spring.springBM.member.model.vo.Member" alias="Member"/>
	</typeAliases>

	<!-- resource : src/main/resources 와 연결 : project 우클릭 - properties - deployment assembly 확인 -->
	<mappers>
		<mapper resource="/mybatis/mapper/bookMapper.xml"/>
		<mapper resource="/mybatis/mapper/memberMapper.xml"/>
		<mapper resource="/mybatis/mapper/noticeMapper.xml"/>
	</mappers>

</configuration>
